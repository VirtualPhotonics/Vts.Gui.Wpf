<UserControl x:Class="Vts.Gui.Wpf.View.TextOutputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" VerticalAlignment="Top">
    <Grid>
        <ScrollViewer x:Name="scrollViewer" VerticalAlignment="Top" VerticalScrollBarVisibility="Visible"
                      Background="White" MaxHeight="60">
            <TextBlock Text="{Binding Text}" MinHeight="60" MinWidth="500" />
        </ScrollViewer>
    </Grid>
</UserControl>