<UserControl x:Class="Vts.Gui.Wpf.View.MieScatteringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200" Height="190">
    <Grid Background="White">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding ConverterParameter=Label_MieScatteringLaw, Converter={StaticResource MyResourceToStringConverter}}" />
            <TextBlock Text="{Binding ConverterParameter=Label_MieNRel, Converter={StaticResource MyResourceToStringConverter}}" />
            <TextBlock Text=" = " />
            <TextBox Text="{Binding n, Mode=TwoWay}" Width="50" KeyDown="TextBox_KeyDown" />
            <TextBlock Text="{Binding ConverterParameter=Label_ScatteringRadius, Converter={StaticResource MyResourceToStringConverter}}" />
            <TextBlock Text=" = " />
            <TextBox Text="{Binding radius, Mode=TwoWay}" Width="50" KeyDown="TextBox_KeyDown" />
            <TextBlock Text="λ = " />
            <TextBox Text="{Binding wavelength, Mode=TwoWay}" Width="50" KeyDown="TextBox_KeyDown" />
        </StackPanel>
    </Grid>
</UserControl>